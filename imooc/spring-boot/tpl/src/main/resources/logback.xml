<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <!--
        encoders are assigned the type
        ch.qos.logback.classic.encoder.PatternLayoutEncoder by
        default
        -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}
                - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="PRINTLN"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36}- %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="dao" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.mix.tpl.web" level="debug" additivity="false">
        <appender-ref ref="PRINTLN" />
    </logger>
    <logger name="com.mix.tpl.service" level="debug" additivity="false">
        <appender-ref ref="PRINTLN" />
    </logger>
    <logger name="com.mix.tpl.handler" level="debug" additivity="false">
        <appender-ref ref="PRINTLN" />
    </logger>
    <logger name="com.mix.tpl.filter" level="debug" additivity="false">
        <appender-ref ref="PRINTLN" />
    </logger>
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>